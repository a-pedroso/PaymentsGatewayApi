{
  "UseInMemoryDatabase": true,

  "RunEFCoreMigrations": false,

  "ForwardHeadersEnabled": true,

  "Authentication": {
    "Jwt": {
      "Audience": "api",
      "Authority": "https://demo.duendesoftware.com",
      "RequireHttpsMetadata": true
    },
    "Swagger": {
      "ClientId": "m2m",
      "ClientSecret": "secret",
      "Scopes": {
        "Api": "api"
      }
    }
  },

  "DataProtectionKeysConfig": {
    "Enabled": false,
    "RedisServer": "localhost",
    "KeyName": "PaymentsGatewayApi-DataProtectionKey"
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;database=PaymentsGatewayApiDb;User Id=sa;Password=Password_123;"
  },

  "Serilog": {
    "Using": [ "Serilog.Expressions" ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/health%'"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/metrics%'"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/swagger%'"
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level}] {Message:lj} MachineName:{MachineName} ProcessId:{ProcessId} ThreadId:{ThreadId} EnvironmentUserName:{EnvironmentUserName} RequestId:{RequestId} SourceContext:{SourceContext} {Exception} {NewLine}"
              }
            }
          ]
        }
      },
      {
        "Name": "LokiHttp",
        "Args": {
          "serverUrl": "http://localhost:3100"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithEnvironmentUserName",
      "WithExceptionDetails",
      "WithProcessId",
      "WithThreadId",
      "WithCorrelationId"
    ],
    "Properties": {
      "ApplicationName": "payments-gateway-webapi",
      "Environment": "development"
    }
  },

  "OpenTelemetryConfig": {
    "Enabled": false,
    "JaegerExporter": {
      "AgentHost": "localhost",
      "AgentPort": 6831
    }
  }
}
